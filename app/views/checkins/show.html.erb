<%- model_class = Checkin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @checkin.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @checkin.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time1) %>:</strong></dt>
  <dd><%= @checkin.time1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time2) %>:</strong></dt>
  <dd><%= @checkin.time2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time3) %>:</strong></dt>
  <dd><%= @checkin.time3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time4) %>:</strong></dt>
  <dd><%= @checkin.time4 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              checkins_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_checkin_path(@checkin), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              checkin_path(@checkin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
