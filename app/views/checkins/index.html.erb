<%- model_class = Checkin -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:employee_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:time1) %></th>
      <th><%= model_class.human_attribute_name(:time2) %></th>
      <th><%= model_class.human_attribute_name(:time3) %></th>
      <th><%= model_class.human_attribute_name(:time4) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= link_to checkin.id, checkin_path(checkin) %></td>
        <td><%= checkin.employee_id %></td>
        <td><%= checkin.date %></td>
        <td><%= checkin.time1 %></td>
        <td><%= checkin.time2 %></td>
        <td><%= checkin.time3 %></td>
        <td><%= checkin.time4 %></td>
        <td><%=l checkin.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_checkin_path(checkin), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      checkin_path(checkin),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_checkin_path,
            :class => 'btn btn-primary' %>
